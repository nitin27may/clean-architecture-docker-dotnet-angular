{
  "$schema": "http://json.schemastore.org/template",
  "author": "Nitin",
  "classifications": ["Web", "Clean Architecture"],
  "name": "Clean Architecture Docker Angular",
  "identity": "NitinSoft.CleanArch.Template",
  "groupIdentity": "NitinSoft.CleanArch.Template",
  "shortName": "cleanarch",
  "sourceName": "ProjectNamePlaceholder",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "organization": {
      "type": "parameter",
      "datatype": "text",
      "description": "Optional organization or company name to be used in namespaces (e.g., YourCompany). If not specified, organization name will be omitted.",
      "defaultValue": "",
      "replaces": "NamespacePrefix."
    },
    "projectName": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "MyApp",
      "replaces": "ProjectNamePlaceholder"
    },
    "includeAngular": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, includes the Angular frontend project.",
      "defaultValue": "true"
    },
    "skipOrgPrefix": {
      "type": "computed",
      "value": "(organization == \"\")"
    },
    "defaultFolderName": {
      "type": "generated",
      "generator": "coalesce",
      "parameters": {
        "sourceVariableName": "organization",
        "fallbackVariableName": "projectName",
        "operations": [
          {
            "type": "conditional",
            "configuration": {
              "condition": "(organization != \"\")",
              "value": "$(organization).$(projectName)",
              "else": "$(projectName)"
            }
          }
        ]
      },
      "replaces": "defaultFolderName"
    }
  },
  "forms": {
    "namespace": {
      "identifier": "replace",
      "pattern": {
        "from": "^(.*?)\\.(.*?)$",
        "to": "$1.$2"
      }
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!includeAngular)",
          "exclude": [ "frontend/**/*" ]
        }
      ]
    }
  ]
}
