{
  "$schema": "http://json.schemastore.org/template",
  "author": "Nitin",
  "classifications": ["Web", "Clean Architecture"],
  "name": "Clean Architecture Docker Angular",
  "identity": "NitinSoft.CleanArch.Template",
  "groupIdentity": "NitinSoft.CleanArch.Template",
  "shortName": "cleanarch",
  "sourceName": "ProjectNamePlaceholder",
  "preferNameDirectory": true,
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "organization": {
      "type": "parameter",
      "datatype": "text",
      "description": "Optional organization or company name to be used in namespaces (e.g., YourCompany). If not specified, organization name will be omitted.",
      "defaultValue": "",
      "replaces": "NamespacePrefix."
    },
    "projectName": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "MyApp",
      "replaces": "ProjectNamePlaceholder"
    },
    "skipOrgPrefix": {
      "type": "computed",
      "value": "(organization == \"\")"
    }
  },
  "forms": {
    "namespace": {
      "identifier": "replace",
      "pattern": {
        "from": "^(.*?)\\.(.*?)$",
        "to": "$1.$2"
      }
    }
  }
}
